<html>

<style>
.button {
  background-color: red;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
}
</style>

<section class="pt-5 pb-5">
  <div class="container">
    <div class="row w-100">
        <div class="col-lg-12 col-md-12 col-12">
            <h3 class="display-5 mb-2 text-center">Shopping Cart</h3>
            <p class="mb-5 text-center">
                <i class="text-info font-weight-bold"><h3>Shopping bag: <%= @bag_items.count %> items</h3></p>

                
            <table id="shoppingCart" class="table table-condensed table-responsive">

            <% if @bag_items.empty? %>
                 <h3>Your bag is empty!</h3>
            <% end %>

                <thead>
                <% @bag_items.each do |item| %>
                    <tr>
                        <th style="width:60%">Product</th>
                        <th style="width:12%">Price</th>
                        <th style="width:10%">Quantity</th>
                        <th style="width:16%">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    
                    <tr>
                     
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-md-3 text-left">
                                     <%= image_tag item.image, :size => "100x100" %>
                                     

                                </div>
                                <div class="col-md-9 text-left mt-sm-2">
                                    <h4 class= "btn btn-primary"><%= item.title %></h4>
                                    <p class="font-weight-light"><%= item.category %></p>
                                </div>
                            </div>
                        </td>
                        <div style="text-align:center;">
                        <td data-th="Price">$<%= item.price %></td>
                        <td data-th="Quantity"><%= item.quantity %></td>
                        <td data-th="Quantity">
							<a href="<%=removeBag_path(item) %>"><button class= "btn btn-danger">Remove</button></a>
                        </td>
                        </div>
                        
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="float-right text-right">
                <h4>Subtotal:</h4>
                <h1>$<%= @sumOfItems %></h1>
            </div>
        </div>
    </div>
    <div class="row mt-4 d-flex align-items-center">
        <div class="col-sm-6 order-md-2 text-right">
            <a href="/checkout" class="btn btn-primary mb-4 btn-lg pl-5 pr-5">Checkout</a>
        </div>
        <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
            
                <a href="/" class="btn btn-primary mb-4 btn-lg pl-5 pr-5">Continue Shopping</a>
        </div>
    </div>
</div>
</section>

</html>